<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_categorias_"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thetechstudio.monitoriababi.Categorias_Activity">

    <TextView
        android:text="Categorias"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Txt_Categorias"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="30sp"
        android:textAlignment="center" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="46dp"
        android:id="@+id/checkbox_matematica"
        android:textSize="20sp"
        android:text="Mat. e suas Tecnologias"
        android:layout_below="@+id/Txt_Categorias"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ling. e suas Tecnologias"
        android:layout_below="@+id/checkbox_matematica"
        android:layout_alignLeft="@+id/checkbox_matematica"
        android:layout_alignStart="@+id/checkbox_matematica"
        android:id="@+id/checkbox_lingua_por" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ciências da natureza"
        android:id="@+id/checkbox_ciencias_nat"
        android:layout_below="@+id/checkbox_lingua_por"
        android:layout_alignLeft="@+id/checkbox_lingua_por"
        android:layout_alignStart="@+id/checkbox_lingua_por" />

      <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Ciências Humanas"
        android:id="@+id/checkbox_ciencias_hum"
        android:layout_below="@+id/checkbox_ciencias_nat"
        android:layout_alignLeft="@+id/checkbox_ciencias_nat"
        android:layout_alignStart="@+id/checkbox_ciencias_nat" />

     <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Aleatorio"
        android:id="@+id/checkbox_aleatorio"
        android:layout_below="@+id/checkbox_ciencias_hum"
        android:layout_alignLeft="@+id/checkbox_ciencias_hum"
        android:layout_alignStart="@+id/checkbox_ciencias_hum" />

    <Button
        android:text="Confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button_Confirmar"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/checkbox_aleatorio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:elevation="0dp"
        android:textSize="18sp"
        android:textColor="@android:color/holo_purple" />

</RelativeLayout>
